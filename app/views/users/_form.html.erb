
<%= simple_form_for @user, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Account</legend>
    
    <%= f.simple_fields_for :customer do |c| %>
      <%= c.input :first_name, input_html: {class: "avg"} %>
      <%= c.input :last_name, input_html: {class: "avg"} %>
      <%= c.input :email, input_html: {class: "avg"} %>
      <%= c.input :phone, input_html: {class: "avg"} %>
    <% end %>
    
    <%= f.input :username %>
    <%= f.input :password, input_html: {class: "avg"} %>
    <%= f.input :password_confirmation, input_html: {class: "avg"} %>

    <% if current_user && current_user.role?(:admin) %>
      <%= f.input :role, collection: User::ROLES, prompt: "Select role" %>
    <% end %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', home_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>

