<%= render partial: "partials/admin_index_structure", locals: {model_name: "item", 
                                                         primary: "active_items", 
                                                         secondary: nil,
                                                         sidebar: "inactive_items"} %>
<% else %>
<%= render partial: "partials/index_structure", locals: {model_name: "item", 
                                                         items: "item_by_category"} %>
<% end %>